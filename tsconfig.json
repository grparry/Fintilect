{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@infrastructure/*": ["infrastructure/*"],
      "@models/*": ["infrastructure/models/*"],
      "@workbench-shared/*": ["workbench/shared/src/*"],
      "@cbp-config-api/*": ["api/cbp/config/src/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules", "**/dist"],
  "references": [
    { "path": "./infrastructure/models" },
    { "path": "./workbench/shared" },
    { "path": "./workbench/legacy-analyzer" },
    { "path": "./workbench/config-gen" },
    { "path": "./api/cbp/config" }
  ]
}
