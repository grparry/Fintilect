{
  "BillPaySettings": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "provider": {
        "type": "string",
        "enum": ["CheckFree", "Metavante", "BillMatrix", "SymitarBillPay"]
      },
      "settings": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "#/CheckFreeSettings"
          },
          {
            "$ref": "#/MetavanteSettings"
          },
          {
            "$ref": "#/BillMatrixSettings"
          },
          {
            "$ref": "#/SymitarBillPaySettings"
          }
        ]
      }
    }
  },
  "CheckFreeSettings": {
    "type": "object",
    "properties": {
      "merchantId": {
        "type": "string"
      },
      "outOfBandSettings": {
        "$ref": "#/OutOfBandSettings"
      },
      "recurringPaymentSettings": {
        "$ref": "#/RecurringPaymentSettings"
      },
      "adminSettings": {
        "$ref": "#/AdminSettings"
      }
    }
  },
  "OutOfBandSettings": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "requiredActions": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "BillPayEnroll",
            "BillPayAccess",
            "AddPayee",
            "TransferAmount"
          ]
        }
      }
    }
  },
  "RecurringPaymentSettings": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "maxRecurringPayments": {
        "type": "integer"
      },
      "maxFuturePayments": {
        "type": "integer"
      }
    }
  },
  "AdminSettings": {
    "type": "object",
    "properties": {
      "memberMenu": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "allowedActions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
