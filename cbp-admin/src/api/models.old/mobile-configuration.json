{
  "MobileConfigurationSettings": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "accountOpening": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "miniOao": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "productTypes": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["Checking", "Savings", "CreditCard", "Loan", "CD"]
                }
              },
              "documentUpload": {
                "type": "boolean"
              },
              "idVerification": {
                "type": "boolean"
              },
              "fundingOptions": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["ACH", "CreditCard", "DebitCard", "Wire"]
                }
              }
            }
          },
          "joinCreditUnion": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "membershipEligibility": {
                "type": "boolean"
              },
              "initialDepositRequired": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "digitalWallet": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "supportedWallets": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["ApplePay", "GooglePay", "SamsungPay"]
            }
          },
          "tokenization": {
            "type": "boolean"
          },
          "instantIssuance": {
            "type": "boolean"
          }
        }
      },
      "pushNotifications": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Transactions",
                "SecurityAlerts",
                "AccountAlerts",
                "Marketing",
                "CardControls"
              ]
            }
          },
          "deliveryMethods": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Push", "SMS", "Email"]
            }
          }
        }
      },
      "quickBalance": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "accountTypes": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Checking", "Savings", "CreditCard", "Loan"]
            }
          },
          "refreshInterval": {
            "type": "integer",
            "description": "Refresh interval in minutes"
          }
        }
      },
      "cardControls": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "provider": {
            "type": "string",
            "enum": ["Ondot", "CardValet", "Custom"]
          },
          "features": {
            "type": "object",
            "properties": {
              "onOffToggle": {
                "type": "boolean"
              },
              "locationControls": {
                "type": "boolean"
              },
              "merchantControls": {
                "type": "boolean"
              },
              "spendingLimits": {
                "type": "boolean"
              },
              "alertPreferences": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "documentCenter": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "documentTypes": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Statements",
                "TaxForms",
                "Notices",
                "Agreements",
                "Custom"
              ]
            }
          },
          "storage": {
            "type": "object",
            "properties": {
              "provider": {
                "type": "string",
                "enum": ["AWS", "Azure", "Local"]
              },
              "retentionPeriod": {
                "type": "integer",
                "description": "Document retention period in days"
              }
            }
          }
        }
      },
      "secureForms": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "formTypes": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "AddressChange",
                "DisputeForm",
                "LoanApplication",
                "Custom"
              ]
            }
          },
          "attachments": {
            "type": "boolean"
          },
          "encryption": {
            "type": "boolean"
          }
        }
      },
      "ficoCreditScore": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "provider": {
            "type": "string",
            "enum": ["FICO", "VantageScore", "Custom"]
          },
          "updateFrequency": {
            "type": "string",
            "enum": ["Daily", "Weekly", "Monthly"]
          },
          "features": {
            "type": "object",
            "properties": {
              "scoreHistory": {
                "type": "boolean"
              },
              "creditFactors": {
                "type": "boolean"
              },
              "scoreSimulator": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "marketing": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "campaigns": {
            "type": "object",
            "properties": {
              "inAppMessages": {
                "type": "boolean"
              },
              "targetedOffers": {
                "type": "boolean"
              },
              "promotions": {
                "type": "boolean"
              }
            }
          },
          "personalization": {
            "type": "boolean"
          }
        }
      },
      "webViews": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "allowedDomains": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "caching": {
            "type": "boolean"
          },
          "javascript": {
            "type": "boolean"
          }
        }
      }
    },
    "required": ["id"]
  }
}
