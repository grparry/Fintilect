{
  "SynergyStatementsSettings": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "apiEndpoint": {
        "type": "string"
      },
      "credentials": {
        "type": "object",
        "properties": {
          "institutionId": {
            "type": "string"
          },
          "apiKey": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "delivery": {
        "type": "object",
        "properties": {
          "methods": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Email", "Portal", "Download"]
            }
          },
          "frequency": {
            "type": "string",
            "enum": ["Daily", "Weekly", "Monthly", "Quarterly"]
          }
        }
      },
      "retention": {
        "type": "object",
        "properties": {
          "period": {
            "type": "integer",
            "description": "Retention period in months"
          },
          "archiveEnabled": {
            "type": "boolean"
          },
          "archiveLocation": {
            "type": "string"
          }
        }
      },
      "format": {
        "type": "object",
        "properties": {
          "types": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["PDF", "HTML", "CSV"]
            }
          },
          "compression": {
            "type": "boolean"
          },
          "encryption": {
            "type": "boolean"
          }
        }
      },
      "notifications": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "templates": {
            "type": "object",
            "properties": {
              "available": {
                "type": "string"
              },
              "reminder": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "InfoImageStatementsSettings": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "serverUrl": {
        "type": "string"
      },
      "authentication": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "domain": {
            "type": "string"
          }
        }
      },
      "processing": {
        "type": "object",
        "properties": {
          "batchSize": {
            "type": "integer"
          },
          "processingWindow": {
            "type": "object",
            "properties": {
              "start": {
                "type": "string",
                "format": "time"
              },
              "end": {
                "type": "string",
                "format": "time"
              }
            }
          }
        }
      },
      "storage": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string"
          },
          "retentionDays": {
            "type": "integer"
          },
          "backupEnabled": {
            "type": "boolean"
          }
        }
      },
      "security": {
        "type": "object",
        "properties": {
          "sslEnabled": {
            "type": "boolean"
          },
          "ipWhitelist": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "accessControl": {
            "type": "object",
            "properties": {
              "roles": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "permissions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
