{
  "CreditCardSettings": {
    "type": "object",
    "description": "Configuration settings for credit card features and controls",
    "required": ["displaySettings", "cardControl", "mobileSettings"],
    "properties": {
      "displaySettings": {
        "type": "object",
        "description": "Settings for how credit card information is displayed",
        "required": ["creditLimitVisible", "showAvailableInsteadOfLimit"],
        "properties": {
          "creditLimitVisible": {
            "type": "boolean",
            "description": "Whether to show credit limit information",
            "default": true
          },
          "showAvailableInsteadOfLimit": {
            "type": "boolean",
            "description": "Whether to show available credit instead of credit limit",
            "default": false
          }
        }
      },
      "cardControl": {
        "type": "object",
        "description": "Settings for card control features",
        "required": ["alerts", "permissions", "locations", "transactions"],
        "properties": {
          "alerts": {
            "type": "object",
            "description": "Alert preference settings",
            "required": ["enabled"],
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether alert preferences are enabled",
                "default": true
              },
              "types": {
                "type": "array",
                "description": "Types of alerts available",
                "items": {
                  "type": "string",
                  "enum": ["transaction", "balance", "payment", "security", "location"]
                }
              }
            }
          },
          "permissions": {
            "type": "object",
            "description": "Card permission settings",
            "required": ["enabled"],
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether permission management is enabled",
                "default": true
              },
              "features": {
                "type": "array",
                "description": "Available permission features",
                "items": {
                  "type": "string",
                  "enum": ["freeze", "international", "online", "contactless"]
                }
              }
            }
          },
          "locations": {
            "type": "object",
            "description": "Location control settings",
            "required": ["enabled"],
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether location controls are enabled",
                "default": true
              },
              "maxRegions": {
                "type": "integer",
                "description": "Maximum number of regions that can be configured",
                "minimum": 1,
                "maximum": 20,
                "default": 5
              },
              "usOnlyEnabled": {
                "type": "boolean",
                "description": "Whether US-only restriction is available",
                "default": true
              },
              "currentLocationEnabled": {
                "type": "boolean",
                "description": "Whether current location restriction is available",
                "default": true
              }
            }
          },
          "transactions": {
            "type": "object",
            "description": "Transaction control settings",
            "required": ["merchantTypes"],
            "properties": {
              "merchantTypes": {
                "type": "object",
                "description": "Merchant type control settings",
                "required": ["enabled"],
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "description": "Whether merchant type controls are enabled",
                    "default": true
                  },
                  "useDynamicTypes": {
                    "type": "boolean",
                    "description": "Whether to use dynamic transaction types",
                    "default": false
                  }
                }
              }
            }
          }
        }
      },
      "mobileSettings": {
        "type": "object",
        "description": "Mobile app specific settings",
        "required": ["application", "digitalWallet"],
        "properties": {
          "application": {
            "type": "object",
            "description": "Credit card application settings",
            "required": ["enabled"],
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether credit card application is enabled",
                "default": true
              },
              "url": {
                "type": "string",
                "description": "URL for credit card application",
                "format": "uri"
              },
              "urlTarget": {
                "type": "string",
                "description": "Target for opening application URL",
                "enum": ["_self", "_blank", "_system"],
                "default": "_blank"
              }
            }
          },
          "digitalWallet": {
            "type": "object",
            "description": "Digital wallet integration settings",
            "required": ["enabled"],
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether digital wallet integration is enabled",
                "default": true
              },
              "supportedWallets": {
                "type": "array",
                "description": "List of supported digital wallets",
                "items": {
                  "type": "string",
                  "enum": ["ApplePay", "GooglePay", "SamsungPay"]
                }
              }
            }
          }
        }
      }
    }
  }
}
