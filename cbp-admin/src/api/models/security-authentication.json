{
  "SecurityAuthenticationSettings": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "passwordPolicy": {
        "type": "object",
        "properties": {
          "minLength": {
            "type": "integer",
            "minimum": 8
          },
          "requireUppercase": {
            "type": "boolean"
          },
          "requireLowercase": {
            "type": "boolean"
          },
          "requireNumbers": {
            "type": "boolean"
          },
          "requireSpecialChars": {
            "type": "boolean"
          },
          "passwordHistory": {
            "type": "integer",
            "description": "Number of previous passwords to remember"
          },
          "expirationDays": {
            "type": "integer"
          },
          "lockoutThreshold": {
            "type": "integer"
          },
          "lockoutDuration": {
            "type": "integer",
            "description": "Duration in minutes"
          }
        }
      },
      "multifactorAuthentication": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "requiredLevel": {
            "type": "string",
            "enum": ["Optional", "Required", "RiskBased"]
          },
          "methods": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "SMS",
                "Email",
                "Authenticator",
                "BiometricFIDO",
                "SecurityKey",
                "Push"
              ]
            }
          },
          "rememberDevice": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "duration": {
                "type": "integer",
                "description": "Duration in days"
              }
            }
          }
        }
      },
      "deviceManagement": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "maxDevices": {
            "type": "integer"
          },
          "deviceIdentification": {
            "type": "object",
            "properties": {
              "methods": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "DeviceFingerprint",
                    "Cookies",
                    "IPAddress",
                    "UserAgent",
                    "BiometricID"
                  ]
                }
              },
              "trustDuration": {
                "type": "integer",
                "description": "Duration in days"
              }
            }
          },
          "deviceApproval": {
            "type": "object",
            "properties": {
              "requireApproval": {
                "type": "boolean"
              },
              "approvalMethods": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["Automatic", "MFA", "Manual"]
                }
              }
            }
          }
        }
      },
      "sessionManagement": {
        "type": "object",
        "properties": {
          "sessionTimeout": {
            "type": "integer",
            "description": "Timeout in minutes"
          },
          "maxConcurrentSessions": {
            "type": "integer"
          },
          "singleSessionPerDevice": {
            "type": "boolean"
          },
          "tokenSettings": {
            "type": "object",
            "properties": {
              "tokenType": {
                "type": "string",
                "enum": ["JWT", "OAuth", "Custom"]
              },
              "tokenExpiration": {
                "type": "integer",
                "description": "Expiration in minutes"
              },
              "refreshTokenEnabled": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "encryption": {
        "type": "object",
        "properties": {
          "algorithm": {
            "type": "string",
            "enum": ["AES256", "RSA2048", "Custom"]
          },
          "keyRotation": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "rotationInterval": {
                "type": "integer",
                "description": "Interval in days"
              }
            }
          },
          "dataAtRest": {
            "type": "boolean"
          },
          "dataInTransit": {
            "type": "boolean"
          }
        }
      },
      "accessControl": {
        "type": "object",
        "properties": {
          "rbacEnabled": {
            "type": "boolean"
          },
          "defaultRole": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "permissions": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "fraudPrevention": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "riskScoring": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "factors": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "Location",
                    "DeviceReputation",
                    "BehavioralAnalysis",
                    "TransactionPattern"
                  ]
                }
              }
            }
          },
          "challengeRules": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "condition": {
                  "type": "string"
                },
                "action": {
                  "type": "string",
                  "enum": ["Block", "Challenge", "Monitor"]
                }
              }
            }
          }
        }
      }
    },
    "required": ["id"]
  }
}
