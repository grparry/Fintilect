{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@legacy-analyzer/*": ["./src/*"],
      "@infrastructure/*": ["../../infrastructure/src/*"],
      "@logs/*": ["../../logs/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../infrastructure" },
    { "path": "../../logs" }
  ]
}
