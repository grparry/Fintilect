{
  "ServicesSettings": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "pscuLogFileTransform": {
        "$ref": "#/PSCULogFileTransformSettings"
      },
      "verafinFileBatch": {
        "$ref": "#/VerafinFileBatchSettings"
      },
      "psiServices": {
        "$ref": "#/PSIServicesSettings"
      }
    }
  },
  "PSCULogFileTransformSettings": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "inputDirectory": {
        "type": "string"
      },
      "outputDirectory": {
        "type": "string"
      },
      "archiveDirectory": {
        "type": "string"
      },
      "filePatterns": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "transformRules": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "inputFormat": {
              "type": "string"
            },
            "outputFormat": {
              "type": "string"
            },
            "mappings": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "source": {
                    "type": "string"
                  },
                  "target": {
                    "type": "string"
                  },
                  "transformation": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "schedule": {
        "type": "object",
        "properties": {
          "frequency": {
            "type": "string",
            "enum": ["Hourly", "Daily", "Weekly"]
          },
          "startTime": {
            "type": "string",
            "format": "time"
          },
          "daysOfWeek": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
            }
          }
        }
      },
      "retention": {
        "type": "object",
        "properties": {
          "inputRetentionDays": {
            "type": "integer"
          },
          "outputRetentionDays": {
            "type": "integer"
          },
          "archiveRetentionDays": {
            "type": "integer"
          }
        }
      },
      "errorHandling": {
        "type": "object",
        "properties": {
          "retryAttempts": {
            "type": "integer"
          },
          "retryIntervalMinutes": {
            "type": "integer"
          },
          "notificationEmails": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "email"
            }
          }
        }
      }
    }
  },
  "VerafinFileBatchSettings": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "sourceDirectory": {
        "type": "string"
      },
      "destinationDirectory": {
        "type": "string"
      },
      "backupDirectory": {
        "type": "string"
      },
      "fileSettings": {
        "type": "object",
        "properties": {
          "filePrefix": {
            "type": "string"
          },
          "fileSuffix": {
            "type": "string"
          },
          "dateFormat": {
            "type": "string"
          }
        }
      },
      "processingRules": {
        "type": "object",
        "properties": {
          "validateChecksum": {
            "type": "boolean"
          },
          "encryptFiles": {
            "type": "boolean"
          },
          "compressionEnabled": {
            "type": "boolean"
          }
        }
      },
      "schedule": {
        "type": "object",
        "properties": {
          "frequency": {
            "type": "string",
            "enum": ["Daily", "Weekly", "Monthly"]
          },
          "executionTime": {
            "type": "string",
            "format": "time"
          }
        }
      },
      "monitoring": {
        "type": "object",
        "properties": {
          "alertEmails": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "email"
            }
          },
          "logLevel": {
            "type": "string",
            "enum": ["Error", "Warning", "Info", "Debug"]
          }
        }
      }
    }
  },
  "PSIServicesSettings": {
    "type": "object",
    "properties": {
      "general": {
        "type": "object",
        "properties": {
          "environment": {
            "type": "string",
            "enum": ["Development", "Testing", "Production"]
          },
          "logDirectory": {
            "type": "string"
          },
          "tempDirectory": {
            "type": "string"
          }
        }
      },
      "services": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "executable": {
              "type": "string"
            },
            "arguments": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "workingDirectory": {
              "type": "string"
            },
            "startupType": {
              "type": "string",
              "enum": ["Automatic", "Manual", "Disabled"]
            },
            "credentials": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                },
                "domain": {
                  "type": "string"
                }
              }
            },
            "recovery": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string",
                  "enum": ["Restart", "RunCommand", "Reboot"]
                },
                "delay": {
                  "type": "integer",
                  "description": "Delay in minutes"
                },
                "maxAttempts": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "monitoring": {
        "type": "object",
        "properties": {
          "healthChecks": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "interval": {
                "type": "integer",
                "description": "Interval in minutes"
              },
              "timeout": {
                "type": "integer",
                "description": "Timeout in seconds"
              }
            }
          },
          "alerts": {
            "type": "object",
            "properties": {
              "email": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "email"
                }
              },
              "sms": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "phone"
                }
              }
            }
          }
        }
      },
      "dependencies": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["Service", "Process", "Port"]
            },
            "value": {
              "type": "string"
            },
            "required": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
