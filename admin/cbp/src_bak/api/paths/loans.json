{
  "/loans": {
    "get": {
      "tags": ["loans"],
      "summary": "List all loan configurations",
      "operationId": "listLoanConfigs",
      "parameters": [
        {
          "name": "page",
          "in": "query",
          "schema": {
            "type": "integer",
            "default": 1
          }
        },
        {
          "name": "limit",
          "in": "query",
          "schema": {
            "type": "integer",
            "default": 20
          }
        },
        {
          "name": "provider",
          "in": "query",
          "schema": {
            "type": "string",
            "enum": ["MeridianLink", "Temenos", "CUDirect", "HarlandLoanEngine", "CuNexus"]
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Loan configurations retrieved successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "$ref": "../models/loans.json#/LoanSettings"
                    }
                  },
                  "total": {
                    "type": "integer"
                  },
                  "page": {
                    "type": "integer"
                  },
                  "limit": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["loans"],
      "summary": "Create a new loan configuration",
      "operationId": "createLoanConfig",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../models/loans.json#/LoanSettings"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Loan configuration created successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../models/loans.json#/LoanSettings"
              }
            }
          }
        }
      }
    }
  },
  "/loans/{id}": {
    "get": {
      "tags": ["loans"],
      "summary": "Get a specific loan configuration",
      "operationId": "getLoanConfig",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Loan configuration retrieved successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../models/loans.json#/LoanSettings"
              }
            }
          }
        }
      }
    },
    "put": {
      "tags": ["loans"],
      "summary": "Update a loan configuration",
      "operationId": "updateLoanConfig",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../models/loans.json#/LoanSettings"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Loan configuration updated successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../models/loans.json#/LoanSettings"
              }
            }
          }
        }
      }
    },
    "delete": {
      "tags": ["loans"],
      "summary": "Delete a loan configuration",
      "operationId": "deleteLoanConfig",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "responses": {
        "204": {
          "description": "Loan configuration deleted successfully"
        }
      }
    }
  }
}
