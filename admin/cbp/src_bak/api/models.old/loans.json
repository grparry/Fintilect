{
  "LoanSettings": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "generalSettings": {
        "$ref": "#/GeneralLoanSettings"
      },
      "originationSettings": {
        "$ref": "#/LoanOriginationSettings"
      },
      "ssoSettings": {
        "$ref": "#/LoanSSOSettings"
      },
      "offerSettings": {
        "$ref": "#/LoanOfferSettings"
      },
      "mobileSettings": {
        "$ref": "#/MobileLoanSettings"
      }
    }
  },
  "GeneralLoanSettings": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "loanTypes": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "Auto",
            "Personal",
            "Mortgage",
            "HomeEquity",
            "Student",
            "Business",
            "CreditCard"
          ]
        }
      },
      "calculatorsEnabled": {
        "type": "boolean"
      },
      "applicationEnabled": {
        "type": "boolean"
      },
      "paymentEnabled": {
        "type": "boolean"
      }
    }
  },
  "LoanOriginationSettings": {
    "type": "object",
    "properties": {
      "provider": {
        "type": "string",
        "enum": ["Internal", "MeridianLink", "Temenos"]
      },
      "settings": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "#/MeridianLinkSettings"
          },
          {
            "$ref": "#/TemenosSettings"
          }
        ]
      },
      "workflow": {
        "type": "object",
        "properties": {
          "requireCreditCheck": {
            "type": "boolean"
          },
          "requireIncomeVerification": {
            "type": "boolean"
          },
          "autoDecisioningEnabled": {
            "type": "boolean"
          }
        }
      }
    }
  },
  "LoanSSOSettings": {
    "type": "object",
    "properties": {
      "provider": {
        "type": "string",
        "enum": ["CUDirect", "HarlandLoanEngine", "CuNexus"]
      },
      "settings": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "#/CUDirectSettings"
          },
          {
            "$ref": "#/HarlandSettings"
          },
          {
            "$ref": "#/CuNexusSettings"
          }
        ]
      }
    }
  },
  "LoanOfferSettings": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "preQualificationEnabled": {
        "type": "boolean"
      },
      "preApprovalEnabled": {
        "type": "boolean"
      },
      "offerTypes": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "AutoRefinance",
            "PersonalLoan",
            "CreditCardUpgrade",
            "HomeEquity"
          ]
        }
      }
    }
  },
  "MobileLoanSettings": {
    "type": "object",
    "properties": {
      "applications": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "supportedLoanTypes": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Auto",
                "Personal",
                "CreditCard"
              ]
            }
          }
        }
      },
      "calculators": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "types": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "AutoLoan",
                "MortgageLoan",
                "PersonalLoan",
                "StudentLoan"
              ]
            }
          }
        }
      },
      "payments": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "allowAutoPay": {
            "type": "boolean"
          },
          "allowExtraPayment": {
            "type": "boolean"
          },
          "allowPaymentScheduling": {
            "type": "boolean"
          }
        }
      }
    }
  },
  "MeridianLinkSettings": {
    "type": "object",
    "properties": {
      "siteId": {
        "type": "string"
      },
      "apiEndpoint": {
        "type": "string"
      },
      "branchId": {
        "type": "string"
      }
    }
  },
  "TemenosSettings": {
    "type": "object",
    "properties": {
      "institutionId": {
        "type": "string"
      },
      "apiKey": {
        "type": "string"
      },
      "environment": {
        "type": "string",
        "enum": ["sandbox", "production"]
      }
    }
  },
  "CUDirectSettings": {
    "type": "object",
    "properties": {
      "dealerId": {
        "type": "string"
      },
      "ssoKey": {
        "type": "string"
      }
    }
  },
  "HarlandSettings": {
    "type": "object",
    "properties": {
      "clientId": {
        "type": "string"
      },
      "apiKey": {
        "type": "string"
      },
      "environment": {
        "type": "string",
        "enum": ["test", "production"]
      }
    }
  },
  "CuNexusSettings": {
    "type": "object",
    "properties": {
      "institutionId": {
        "type": "string"
      },
      "secretKey": {
        "type": "string"
      },
      "callbackUrl": {
        "type": "string"
      }
    }
  }
}
