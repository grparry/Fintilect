@model Psi.Data.Models.Domain.ContactUs.ContactUsPhoneNumberModel

<div class="form-group">
    @Html.LabelFor(m => m.Title, new { @class = "col-md-3 control-label" })
    <div class="col-md-7">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-3 control-label" })
    <div class="col-md-7">
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
    </div>
</div>
@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.ContactUsGroupId)

@if (Model.Id > 0 && !Model.GroupHasPhoneHours)
{
    <strong class="col-md-3 control-label">Phone Hours</strong>
    <span class="pull-right">
        <button type="button" class="btn btn-default btn-xs" onclick="CreditUnionContactInfo.AddPhoneHour(this, null, '@Model.Id');">
            New &nbsp;<span class="glyphicon glyphicon-plus"></span>
        </button>
    </span>
    <br/><br/>
    if (Model.ContactUsPhoneHours.Any())
    {
        <div>
            @Html.EditorFor(m => m.ContactUsPhoneHours)
        </div>
    }
}
