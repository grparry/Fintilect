            @Html.LabelFor(m => m.FeatureGroup.FeeAdjustment, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FeatureGroup.FeeAdjustment, new { @class = "form-control" })
            </div>
        </div>
        <br/>
        <div class="form-group">
            @Html.LabelFor(m => m.FeatureGroup.MaintenanceFee, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FeatureGroup.MaintenanceFee, new { @class = "form-control" })
            </div>
        </div>
        <br/>*@
        <button onclick="FeaturesManager.AddUpdateFeatureGroup(this);">Submit</button>
    </div>
</div>
