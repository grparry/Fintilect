@using Omega.Presentation.Mvc.Models.LayeredSecurity
@model LayeredSecurityFeaturesViewModel

@{
    ViewBag.Title = "Layered Security - " + Model.Feature.Name;
    ViewBag.ActiveMenu = "layered-security";
    ViewBag.BaseModel = Model;
}

<div class="panel-body">
    @using (Html.BeginForm("AddUpdateAction", "LayeredSecurity", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.FeatureAction.Name, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FeatureAction.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FeatureAction.Description, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FeatureAction.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FeatureAction.StrongAuthenticationWeight, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FeatureAction.StrongAuthenticationWeight, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FeatureAction.MinimumApplicationVersion, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FeatureAction.MinimumApplicationVersion, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FeatureAction.IsLoginAction, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.CheckBoxFor(m => m.FeatureAction.IsLoginAction, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                @Html.HiddenFor(m => m.Feature.FeatureKey)
                @Html.HiddenFor(m => m.Feature.FeatureId)
                @Html.HiddenFor(m => m.Feature.ApplicationId)
                @Html.HiddenFor(m => m.Feature.Description)
                @Html.HiddenFor(m => m.Feature.Name)
                @Html.HiddenFor(m => m.FeatureAction.ActionId)
                @Html.HiddenFor(m => m.FeatureAction.PublicId)
                @if (Model.FeatureAction.ActionId == 0)
                {
                    <input type="submit" class="btn btn-default" value="Add New Action" />
                }
                else
                {
                    <input type="submit" class="btn btn-default" value="Update Action" />
                }
            </div>
        </div>
    }
</div>