
@model Omega.Presentation.Mvc.Models.QrCodeGenerator.AddUpdateUrlModel

@{
    ViewBag.Title = "Edit Web Service URL";
    ViewBag.BaseModel = Model;
    Layout = "";
}

<div class="panel-body">
    @using (Html.BeginForm("AddUpdateUrl", "QrCodeGenerator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.WebServiceUrl.EnvironmentName, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.WebServiceUrl.EnvironmentName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.WebServiceUrl.EnvironmentUrl, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.WebServiceUrl.EnvironmentUrl, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                @Html.HiddenFor(m => m.WebServiceUrl.Id)
                @Html.HiddenFor(m => m.WebServiceUrl.UrlIdentifier)
                @if (Model.WebServiceUrl.Id == 0)
                {
                    <input type="submit" class="btn btn-default" value="Add New URL" name="button" />
                }
                else
                {
                    <input type="submit" class="btn btn-default" value="Update URL" name="button" />
                }
                &nbsp;&nbsp;&nbsp;&nbsp;
                <input type="submit" class="btn btn-default" value="Delete URL" name="button" />
            </div>
        </div>
    }
</div>