@model Omega.Presentation.Mvc.Models.AppConfig.GetConfigSettingDetialModel

@if (Model.ConfigChanged)
{
    <div class="alert alert-info">
        Setting updated at @DateTime.UtcNow
    </div>
}


<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-3 control-label">Name:</label>
        <div class="col-sm-9 form-control-static">
            @Model.Config.Name
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Application:</label>
        <div class="col-sm-9">
            <select class="form-control" name="Application">
                <option @Html.Raw(Model.Config.Application.ToString() == "HomeBanking" ? "selected='selected'" : string.Empty)>HomeBanking</option>
                <option @Html.Raw(Model.Config.Application.ToString() == "HbBol" ? "selected='selected'" : string.Empty)>HbBol</option>
                <option @Html.Raw(Model.Config.Application.ToString() == "Jdsl" ? "selected='selected'" : string.Empty)>Jdsl</option>
                <option @Html.Raw(Model.Config.Application.ToString() == "HbAdminBol" ? "selected='selected'" : string.Empty)>HbAdminBol</option>
                <option @Html.Raw(Model.Config.Application.ToString() == "TwoWaySMS" ? "selected='selected'" : string.Empty)>TwoWaySMS</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Value:</label>
        <div class="col-sm-9">
            <textarea type="text" id="configValueInput" class="form-control" placeholder="insert value here...">@Model.Config.DefaultValue</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Value Is Null:</label>
        <div class="col-sm-8">
            <input type="checkbox" class="form-control" Id="ValueIsNull" @Html.Raw(Model.Config.DefaultValue == null && Model.Config != null ? "checked='checked'" : string.Empty) />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
            <button class="btn btn-primary" type="button" onclick="AppConfigManager.SaveConfigValue(this);"
                    resource-name="@Model.Config.Name" resource-application="@Model.Config.Application">
                Save &nbsp;<span class="glyphicon glyphicon-save"></span>
            </button>
        </div>
    </div>
</div>